SHELL=/bin/bash
PATH=/opt/news_app/.venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Backup DB daily (02:00 UTC)
0 2 * * * /opt/news_app/scripts/backup_database.sh >> /var/log/news_app/backup.log 2>&1

# Run scrapers every 15 minutes
*/15 * * * * cd /opt/news_app && /opt/news_app/.venv/bin/python scripts/run_scrapers.py --show-stats >> /var/log/news_app/scrapers-cron.log 2>&1

# Run feed discovery weekly (Mondays at 03:00 UTC)
0 3 * * 1 cd /opt/news_app && /opt/news_app/.venv/bin/python scripts/run_feed_discovery.py >> /var/log/news_app/feed-discovery-cron.log 2>&1
