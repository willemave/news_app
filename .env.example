# Database
DATABASE_URL="sqlite:///./news_app.db"
DATABASE_POOL_SIZE=20

# Application
APP_NAME="News Aggregator"
DEBUG=false
LOG_LEVEL=INFO

# Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
ADMIN_PASSWORD=your-admin-password-here

# Workers
MAX_WORKERS=5
WORKER_TIMEOUT_SECONDS=300
CHECKOUT_TIMEOUT_MINUTES=30

# LLM Services (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Reddit (PRAW script flow)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_READ_ONLY=true
REDDIT_USER_AGENT=news-app/1.0 (by u/yourname)

# Whisper Transcription Settings
USE_LOCAL_WHISPER=true
WHISPER_MODEL_SIZE=base  # Options: tiny, base, small, medium, large
WHISPER_DEVICE=auto      # Options: auto, cpu, cuda, mps


